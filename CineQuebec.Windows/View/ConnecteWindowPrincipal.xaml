        xmlns:rs="clr-namespace:CineQuebec.Windows.Ressources.i18n"
        mc:Ignorable="d"
        Title="{x:Static rs:Resource.app_name}" 
        ResizeMode="NoResize"
        Height="700" Width="1200"
         Icon="/Ressources/images/logoCinemaWithoutText.png" >

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               HorizontalAlignment="Center" 
               Margin="10,10,10,10" 
               VerticalAlignment="Center"
               Source="/Ressources/images/logoCinema.png"/>
        <Frame x:Name="mainContentControl" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"  NavigationUIVisibility="Visible" />
